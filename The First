#This is the initial ideation for the logic of the first part of two-part challenge. 




#include "M5Atom.h"

void setup() 
{
    M5.begin(true, false, true);
    delay(2000);

}

uint8_t FSM = 0;

void loop()
{
    if (M5.Btn.wasPressed())
    {

        switch (FSM)
        {
        case 0: // All LED's off 
            int x, y;
            for(x = 0;x < 5; x++){
              for(y=0;y<5;y++){
                M5.dis.drawpix(x,y, 0000000);
                }
              }
            
            break;
            
        case 1: // Red strobing 
 
            
              for (x = 0; x < 5; x++) {
                for (y = 0; y < 5; y++) {
                   M5.dis.drawpix(x, y, 0x00f000);
                       }
                    } 

           
                for (x = 0; x < 5; x++) {
                  for (y = 0; y < 5; y++) {
                   M5.dis.drawpix(x, y, 000000);
                       }
                    } 

          
            break;
            
        case 2: // 
            M5.dis.drawpix(0, 0x0000f0);
            break;
            
        case 3:
            M5.dis.drawpix(0, 0x707070);
            break;
        default:
            break;
        }
        FSM++;
        if (FSM >= 4)
        {
            FSM = 0;

        }
    }
    
    delay(50);
    M5.update();

}
